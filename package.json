{
  "private": true,
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "db:provision": "ts-node scripts/provision-supabase.ts",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "db:setup": "npx tsx lib/db/setup.ts",
    "db:seed": "npx tsx lib/db/seed.ts",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "dev:backend": "tsc -b backend --watch",
    "dev:frontend": "tsc -b frontend --watch",
    "build:backend": "tsc -b backend",
    "build:frontend": "tsc -b frontend",
    "test:backend": "jest --config backend/jest.config.js",
    "test:frontend": "cd frontend && npm test",
    "start:backend": "cd backend && node dist/app/server.js",
    "start:frontend": "cd frontend && next dev",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\""
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
